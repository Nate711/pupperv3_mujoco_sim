<mujoco model="pupper_v3_2_floating">
  <include file="compiler_settings.xml" />
  <include file="assets.xml" />
  <include file="defaults.xml" />

  <worldbody>
    <camera name="tracking_cam" mode="targetbody" target="torso" pos="0.5 -0.5 0.5" />

    <geom name="floor" size="0 0 .05" type="plane" material="grid" condim="3" />
    <light name="spotlight" mode="targetbodycom" target="torso" diffuse=".8 .8 .8"
      specular="0.3 0.3 0.3" pos="0 -4 4" cutoff="100" />

    <body name="torso" pos="0 0 0.2">
      <freejoint name="root" />
      <inertial pos="0.023 0 0.014" mass="1.500" diaginertia="2.4e-03 8.4e-03 8.4e-03" />
      <geom
        size="0.132095 0.06626 0.055" pos="0.02009 0 0.03177" quat="0.707105 0.707108 0 0"
        type="box" rgba="0.7 0.7 0.7 0.2" />
      <geom type="mesh" mesh="pupperv3_export" contype="0" conaffinity="0" />
      <include file="pupper_v3_2.xml" />
    </body>
  </worldbody>

  <sensor>
    <gyro name="body_gyro" site="torso_imu_site" />
    <accelerometer name="body_acc" site="torso_imu_site" />
  </sensor>

  <include
    file="pupper_v3_actuators.xml" />
</mujoco>